{
  "name": "@stormtail/pinia-orm-root",
  "private": true,
  "packageManager": "pnpm@7.5.0",
  "workspaces": {
    "packages": [
      "packages/*",
      "playgrounds/*"
    ]
  },
  "scripts": {
    "release": "node scripts/release.mjs",
    "size": "lerna run size --scope @pina-orm/nuxt --scope pinia-orm",
    "build": "lerna run build --scope @pina-orm/nuxt --scope pinia-orm",
    "docs:build": "lerna run docs:build --scope @pinia/docs",
    "play": "lerna run play",
    "build:dts": "lerna run build:dts --parallel",
    "lint": "prettier -c --parser typescript \"packages/*/{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "pnpm run lint --write",
    "test": "lerna run packages/pinia-orm/test",
    "test:coverage": "lerna run coverage --scope pinia-orm",
    "test:types": "tsc --build ./tsconfig.json",
    "test:dts": "lerna run test:dts",
    "docs:api": "lerna run docs:api --scope @pinia/docs"
  },
  "devDependencies": {
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/node": "^16.11.12",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "enquirer": "^2.3.6",
    "execa": "^6.0.0",
    "expect": "^27.4.2",
    "globby": "^12.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^12.5.0",
    "lodash.kebabcase": "^4.1.1",
    "minimist": "^1.2.5",
    "p-series": "^3.0.0",
    "pascalcase": "^1.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "typescript": "^4.5.3",
    "yorkie": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "ufo": "^0.8.4",
      "std-env": "^3.1.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "vue": "3"
      }
    }
  }
}
